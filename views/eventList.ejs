<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <script src="https://cdn.tailwindcss.com"></script>
    <script
      src="https://kit.fontawesome.com/76c1e6dd19.js"
      crossorigin="anonymous"
    ></script>
  </head>
  <body>
    <header class="container mx-auto">
      <div class="flex justify-between bg-red-500 p-4 rounded">
        <div class="text-xl font-bold text-white">Events</div>
        <div>
          <a href="/event/new"
            ><button
              class="p-2 bg-pink-200 text-red-500 rounded hover:bg-pink-100"
            >
              Add Event
            </button></a
          >
        </div>
      </div>
    </header>
    <h2 class="text-3xl font-extrabold text-red-500 my-3">All Events</h2>
    <% data.forEach(event =>{ %>
    <ul>
      <li class="bg-pink-100 py-8 px-4 rounded m-2">
        <div class="flex justify-between">
          <div>
            <h2 class="text-2xl my-2 text-red-600 font-extrabold">
              <%= event.title %>
            </h2>
            <p class="text-red-500 font-semibold"><%= event.summary %></p>
          </div>
          <div class="align-middle">
            <a href="/event/<%= event._id %>"
              ><button
                class="p-4 bg-red-600 text-red-100 rounded hover:bg-pink-100 hover:text-gray-900"
              >
                View
              </button></a
            >
          </div>
        </div>
      </li>
    </ul>
    <% }) %>
    <footer class="relative">
      <div class="container bg-gray-700 mx-auto p-4 absolute top-52 w-full">
        <div class="text-2xl font-bold text-white">Event</div>
        <div>
          <h3 class="text-2xl font-bold text-white">Contact Us</h3>
          <div class="flex">
            <div class="text-white m-2 text-xl">
              <i class="fa-brands fa-instagram"></i>
            </div>
            <div class="text-white m-2 text-xl">
              <i class="fa-brands fa-x-twitter"></i>
            </div>
          </div>
        </div>
        <h4 class="text-center font-mono text-white text-sm">
          &copf;Copyright All rights reserved
        </h4>
      </div>
    </footer>
  </body>
</html>
